{
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"composite": true,
		"downlevelIteration": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ESNext"],
		"module": "esnext",
		"moduleDetection": "force",
		"moduleResolution": "bundler",
		"noEmit": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
		"types": [
			"bun-types", // add Bun global
			"./types.d.ts"
		]
	}
}
